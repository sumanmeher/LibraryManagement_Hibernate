<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.digit.hibernateServlet.bean.BookDetails" table="book">
		<id name="b_id" column="b_id"></id>
		<property name="b_name">
			<column name="b_name" />
		</property>
		<property name="author">
			<column name="author" />
		</property>
		<property name="cost">
			<column name="cost" />
		</property>
		<property name="category">
			<column name="category" />
		</property>
		<property name="status">
			<column name="status" />
		</property>

	</class>
</hibernate-mapping>
