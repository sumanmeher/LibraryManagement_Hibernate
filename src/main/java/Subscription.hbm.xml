<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.digit.hibernateServlet.bean.SubscriptionDetails" table="subscription">
		<id name="sub_id" column="sub_id"></id>
		<property name="u_id">
			<column name="u_id" />
		</property>
		<property name="amount">
			<column name="amount" />
		</property>
		<property name="invoice_no">
			<column name="invoice_no" />
		</property>
		<property name="date">
			<column name="date" />
		</property>
		
	</class>
</hibernate-mapping>
